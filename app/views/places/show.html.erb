<div id="heading">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="heading-content">
                                <h2><%= @place.title %></h2>
                                <span>Places /<%= link_to @place.id, @place %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>





            <div id="product-post">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="heading-section">
                                <h2><%= @place.category.capitalize %></h2>
                                <img src="/assets/under-heading.png" alt="" />
                            </div>
                        </div>
                    </div>
                    <div id="single-blog" class="page-section first-section">
                        <div class="container">
                            <div class="row">
                                <div class="product-item col-md-12">
                                    <div class="row">
                                        <div class="col-md-8">  
                                                <div class="image">
                                                    <div class="image-post">
                                                        <img src="<%=@place.image%>" alt="" style="max-width: 100%  ">
                                                    </div>
                                                </div>
                                                <div class="product-content">
                                                    <div class="product-title">
                                                        <h3><%=@place.title%></h3>
                                                        <span class="subtitle"><%=@place.reviews.count%> reviews | By:</span>
                                                        <span class="subtitle"><%= link_to @place.user.name, user_path(@place.user) %></span>
                                                    </div>
                                                    <h4>Description</h4>
                                                     <%= @place.description.html_safe %>
                                                     <h4>Address</h4>
                                                      <%= @place.address.html_safe %>
                                                      <br>
                                                      <%if current_user.admin? %>
                                                      <%= link_to 'Edit', edit_place_path(@place) %>
                                                      <%end%>
                                                </div>
                                                <div class="divide-line">
                                                <img src="/assets/div-line.png" alt="" />
                                                </div>
                                                <div class="comments-title">
                                                    <div class="comment-section">
                                                        <h4><%=@place.reviews.count%> reviews</h4>
                                                    </div>
                                                </div>

                                                <div class="all-comments">
                                                  <% @place.reviews.each do |x| %>
                                                    <%= render 'reviews/show', review: x %>
                                                  <% end %>
                                                </div>
                                                <div class="divide-line">
                                                <img src="/assets/div-line.png" alt="" />
                                                </div>
                                            <div class="leave-comment">
                                                <div class="leave-one">
                                                    <h4>Write a review</h4>
                                                </div>
                                            </div>
                                            <div class="leave-form">
                                                <%= render 'reviews/form', place: @place %>
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-md-offset-1">
                                            <div class="side-bar">
                                                <div class="news-letters">
                                                    <h4>Browse Categories</h4>
                                                    <div class="archives-list">
                                                        <ul>
                                                            <% Place::CATEGORIES.keys.each do |x| %>
                                                          <li><a href="/home/<%=x.downcase%>"><i class="fa fa-angle-right"></i><%=x.capitalize%></a></li>
                                                          <% end %>
                                                        </ul>
                                                    </div>        
                                                </div>
                                                <div class="recent-post">
                                                    <h4>Recent Places</h4>
                                                    <% Place.last(3).reverse.each do |p| %>
                                                  <div class="recent-post">
                                                      <div class="recent-post-thumb">
                                                          <%= link_to p do%><img src="<%=p.image%>" alt="" style="width: 70px; height: 70px"><%end%>
                                                      </div>
                                                      <div class="recent-post-info">
                                                          <h6><%= link_to p.title, p %></h6>
                                                          <span><%= p.date %></span>
                                                      </div>
                                                  </div>
                                                  <%end%>
                                                </div>
                                                <div class="advertisement">
                                                    <h4>Flickr news</h4>
                                                    <div class="flickr-images">
                                                        <div class="row">
                                                            <div class="col-md-4 col-sm-2 col-xs-3">
                                                                <img src="/assets/flickr-image1.jpg" alt="">
                                                            </div>
                                                            <div class="col-md-4 col-sm-2 col-xs-3">
                                                                <img src="/assets/flickr-image2.jpg" alt="">
                                                            </div>
                                                            <div class="col-md-4 col-sm-2 col-xs-3">
                                                                <img src="/assets/flickr-image3.jpg" alt="">
                                                            </div>
                                                            <div class="col-md-4 col-sm-2 col-xs-3">
                                                                <img src="/assets/flickr-image4.jpg" alt="">
                                                            </div>
                                                            <div class="col-md-4 col-sm-2 col-xs-3">
                                                                <img src="/assets/flickr-image1.jpg" alt="">
                                                            </div>
                                                            <div class="col-md-4 col-sm-2 col-xs-3">
                                                                <img src="/assets/flickr-image2.jpg" alt="">
                                                            </div>
                                                            <div class="col-md-4 col-sm-2 col-xs-3">
                                                                <img src="/assets/flickr-image3.jpg" alt="">
                                                            </div>
                                                            <div class="col-md-4 col-sm-2 col-xs-3">
                                                                <img src="/assets/flickr-image4.jpg" alt="">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>    
                                            </div>
                                        </div>     
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>     
                </div>
            </div>